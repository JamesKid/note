# .bashrc

# User specific aliases and functions

alias rm='rm -i'
alias cp='cp -i'
alias mv='mv -i'
alias ll='ls -lh --color=auto'
alias vim='/usr/local//bin/vim'
alias qing='echo 3 > /proc/sys/vm/drop_caches'
alias mail='/root/mailx-12.4/mailx'
alias size='du --max-depth=1 -h'
# show now which user in vpn
alias pppvpn='last | grep still | grep ppp'
#secure 
	alias secure-tail='cat /var/log/secure | tail -n 300'
	alias secure-fail='cat /var/log/secure | grep "Failed password" | tail -n 300 '
	alias secure-failip='cat /root/zsj/script/linux_server_script.sh | grep "#001" | /bin/bash'
#qing
# Source global definitions
if [ -f /etc/bashrc ]; then
	. /etc/bashrc
fi
